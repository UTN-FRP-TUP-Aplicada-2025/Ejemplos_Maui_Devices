<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejemplo_LectorQR.Pages.MainPage"
             xmlns:gv="clr-namespace:BarcodeScanner.Mobile;assembly=BarcodeScanner.Mobile.Maui">

    <Grid RowDefinitions="Auto,*,Auto">

        <StackLayout Orientation="Horizontal" Grid.Row="0">
          
            <Button Text="FlashLight"
                    BackgroundColor="#0075FF"
                    TextColor="White"
                    Clicked="OnFlashLightButtonClicked"
                    HorizontalOptions="Center"
                    CornerRadius="10"/>
            <Button Text="Switch Camera"
                    BackgroundColor="Brown"
                    TextColor="White"
                    Clicked="OnSwitchCameraButtonClicked"
                    CornerRadius="10"/>
        </StackLayout>

        <gv:CameraView x:Name="Camera" OnDetected="OnCameraViewOnDetected" 
                       Grid.Row="1" TorchOn="False" VibrationOnDetected="False"
                       ScanInterval="50"/>

        <Label Text="Scan QRCode" FontSize="Medium"
               HorizontalTextAlignment="Center" Grid.Row="2" TextColor="Red" />

    </Grid>

</ContentPage>
