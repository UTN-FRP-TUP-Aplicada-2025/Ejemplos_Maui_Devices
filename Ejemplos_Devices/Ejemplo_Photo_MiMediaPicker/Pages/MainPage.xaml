<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejemplo_Photo_MiMediaPicker_Task.Pages.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30,0"  Spacing="25">

            <Image x:Name="ImgPhoto" HeightRequest="185" Aspect="AspectFit" Background="Gray">
                <Image.Source>
                    <FontImageSource Glyph="photo_camera" FontFamily="MaterialIconsOutlined" />
                </Image.Source>
            </Image>

            <Button x:Name="BtnPhoto" Text="Tomar Foto" Clicked="OnAbrirCamaraClicked" />
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
